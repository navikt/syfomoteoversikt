{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "/",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "build", "webpack"]
}
